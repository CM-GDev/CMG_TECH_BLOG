{{!-- login page --}}
<article class="row">
    <form class="col s12 login-form">
        <h3 class="center-align">Login</h3>
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                {{!-- user must specify account email --}}
                <input id="email-login" type="email" class="validate">
                <label for="email-login">Email</label>
                <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">vpn_key</i>
                {{!-- user must specify accout password --}}
                <input id="password-login" type="password" class="validate">
                <label for="password-login">Password</label>
            </div>
        </div>
        <div class="row">
            <button class="waves-effect waves-light btn col s12" type="submit" name="action">Login</button>
        </div>
    </form>
    <a href="/signup">Sign Up Instead</a>
</article>

{{!-- js required to check account in db  --}}
<script src="/js/login.js"></script>