<div class="row">
    <div class="col s12">
        <div class="card grey">
            <div class="card-content black-text">
                <a href="/blog/{{blog.id}}" class="card-title white-text">{{blog.title}} <font size="-1">Posted by {{blog.user.name}} on {{format_date blog.date_created}}</font></a>
                <p>{{blog.description}}</p>
            </div>
        </div>
    </div>
</div>
{{#each}}
<div class="row">
    <div class="col s12">
        <div class="card grey lighten-1">
            <div class="card-content black-text">
                <a class="card-title white-text">Comment/s</a>
                <p>{{blog.comments.description}}</p>
                <font size="-1">Posted by {{blog.comments}} on {{format_date blog.comments.date_created}}</font>
            </div>
        </div>
    </div>
</div>
{{/each}}
<div class="row">
    <form class="col s12">
        <div class="row">
            <div class="input-field col s12">
            <textarea id="textarea1" class="materialize-textarea"></textarea>
            <label for="textarea1">Comment</label>
            </div>
        </div>
        {{#if logged_in}}
        <div class="row">
            <button class="waves-effect waves-light btn col s12" type="submit" name="action">Submit</button>
        </div>
        {{/if}}
    </form>
</div>